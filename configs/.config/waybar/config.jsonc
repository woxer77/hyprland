  "temperature#cpu": {
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input", // 0,1 - nvme | 2 gpu | 3 cpu | 4 motherboard
    "format": "<span size='16000' foreground='#25bcf8'>Ôãâ</span> {temperatureC}¬∞C",
    "tooltip-format": "CPU temperature: Ôãâ {temperatureC}¬∞C",
    "interval": 3,
    "critical-threshold": 80
  },

  "cpu": {
    "interval": 3,
    "format": "<span size='15000' foreground='#25bcf8'>Ôãõ</span> {usage}%"
  },

  "memory": {
    "interval": 3,
    "format": "<span size='17000' foreground='#B388EB'>Û∞çõ</span>{used: 0.2f} GiB"
