{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "modules-left": ["clock", "hyprland/language", "custom/weather", "hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    // "temperature#gpu",
    // "cava",
    // "mpris",
    "custom/vpn",
    "network",
    "temperature#cpu",
    "cpu",
    "memory",
    "pulseaudio" /* , "tray" */
    // "custom/updates"
  ],
  "hyprland/window": {
    "format": "{title}",
    "icon": true,
    "icon-size": 20
  },

  "hyprland/workspaces": {
    "all-outputs": true,
    "on-click": "activate",
    "format": "{icon} {windows}",
    "format-window-separator": " ",
    "window-rewrite-default": "ÔÅô",
    "window-rewrite": {
      "title<.*youtube.*>": "ÔÖ™", // Windows whose titles contain "youtube"
      "title<.*twitch.*>": "Ôá®",
      "title<.*[Gg]ithub.*>": "ÔÑì", // if your regex engine supports case-insensitive flag `(?i)`
      "code": "Û∞®û",
      "brave": "ÔÇ¨",
      "kitty": "Ôíâ",
      "thunar": "Ôìì",
      "vlc": "Û∞ïº",
      "figma": "ÓΩá",
      "spotify": "ÔÜº",
      "calculator": "Ôá¨",
      "pavucontrol": "Óò∏",
      "loupe": "ÔÄæ",
      "firefox": "ÓùÖ"
    }
  },

  "hyprland/language": {
    "format-en": "EN",
    "format-ru": "RU",
    "on-click": "hyprctl switchxkblayout rdr-rainy-75 next"
  },

  "custom/vpn": {
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/vpn-status.sh",
    "on-click": "~/.config/waybar/scripts/vpn-toggle.sh",
    "signal": 10
  },

  "custom/weather": {
    "interval": 600,
    "exec": "node ~/.config/waybar/scripts/weather.js", //"~/.config/waybar/scripts/waybar-wttr.py"
    "return-type": "json"
  },

  "custom/updates": {
    "interval": 3600,
    "exec": "~/.config/waybar/scripts/updates-status.sh",
    "on-click": "~/.config/waybar/scripts/update-packages.sh",
    "return-type": "json"
  },

  /* "tray": {
    "icon-size": 18,
    "spacing": 10
  }, */

  "clock": {
    "timezone": "Europe/Kyiv",
    "format": "{:%H:%M:%S | %a, %b %d}",
    "tooltip-format": "{calendar}",
    "interval": 1,
    "calendar": {
      "mode": "year",
      "mode-mon-col": 4,
      "on-scroll": 1,
      "format": {
        "months": "<span color='#cdd6f4'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'><b>{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "pulseaudio": {
    "format": "<span size='16000' foreground='#708090'>{icon}</span> {volume}%",
    "tooltip": false,
    "format-muted": "<span size='16000' foreground='#708090'>Û∞üé</span> muted",
    "on-click": "pamixer -t",
    "on-scroll-up": "/usr/local/bin/volume-up.sh",
    "on-scroll-down": "/usr/local/bin/volume-down.sh",
    "scroll-step": 5,
    "format-icons": {
      "default": ["Û∞ãã"]
    },
    "on-click-right": "sh -c 'pavucontrol &'"
  },

  "network": {
    "format": "<span size='16000' foreground='#b4befe'>Û∞õ¥</span> {bandwidthDownBits}",
    "format-disconnected": "<span size='16000' foreground='#eba0ac'>Û∞±ü</span>",
    "tooltip-format-ethernet": "{ipaddr}/{cidr} Û∞äó",
    "tooltip-format-disconnected": "Disconnected",
    "interval": 2
  },

